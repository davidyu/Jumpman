package{	import Box2D.Dynamics.b2Body;		import flash.display.DisplayObjectContainer;	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.TimerEvent;	import flash.geom.Point;	import flash.utils.Timer;
		public class Collectible extends Actor	{				private var _canvas:DisplayObjectContainer;		private var _sprite:MovieClip;		private var _gotten:Boolean = false;				public function Collectible(myBody:b2Body, mySprite:MovieClip, canvas:DisplayObjectContainer)		{			_canvas = canvas;			_canvas.addChild(mySprite);						_sprite = mySprite;						super(myBody, mySprite, false);		}				protected function PlayGetSound():void		{			//I expect this to be overriden by my children 		}				public function Disappear():void		{			//fade out, at the end of fade, destroy body			PlayGetSound();			_gotten = true;			_sprite.gotoAndStop("disappear");			var timer:Timer = new Timer(500, 1);			timer.addEventListener(TimerEvent.TIMER, destroyBody);			timer.start();		}				private function destroyBody(ev:TimerEvent)		{			destroy();		}						override public function handleContact(otherObj):void		{			if(otherObj is PlayerActor)			{				if(!_gotten) {					Disappear();				}			}		}	}}